    <h1><b>A good place to keep track of your to-do list, easy to organize your work.......</b></h1>
    <div class="todo-list">
        <h1>Todo List</h1>
        <ul id="task"></ul>
        <input type="text" id="newtask" placeholder="Task to be added">
        <button onclick="addTask()">Add Task</button>
    </div>
<script>
        function addTask() {
            var taskInput = document.getElementById("newtask");
            var taskText = taskInput.value.trim();
            if (taskText !== "") {
                var tasks = document.getElementById("task");
                var newTask = document.createElement("li");
                newTask.innerHTML = `
                    <input type="checkbox">
                    <span>${taskText}</span>
                `;
                tasks.appendChild(newTask);
                taskInput.value = "";
            }
        }
</script>
